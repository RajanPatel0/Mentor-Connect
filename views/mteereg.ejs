<!-- Mentee Registration Page Start -->
<section class="mentee-registration-section">
    <div class="mentee-registration-container">
        <!-- Back Button -->
        <a href="/register" class="back-button"><i class="fas fa-arrow-left"></i> Back</a>
        <h2 class="mentee-registration-heading">Mentee Register</h2>
        <form class="mentee-registration-form" id="menteeRegistrationForm" action="/register/mteereg" method="post">
         <div class="registration-container">
         <!-- Name Input -->
           <div class="form-group">
               <label for="name">Enter Name</label>
               <input type="text" id="name" name="name" value="<%= user ? user.name : '' %>" placeholder="Enter your name" required>
           </div>
           <!-- Email Input -->
           <div class="form-group">
               <label for="email">Enter Email</label>
               <input type="email" id="email" name="email" value="<%= user ? user.email : '' %>" placeholder="Enter your email" required>
           </div>
           <!-- Password Input -->
           <div class="form-group">
               <label for="password">Create Password</label>
               <input type="password" id="password" name="password" placeholder="Enter your password" required>
           </div>
           <!-- User Image Input -->
           <div class="form-group">
               <label for="user-image">Upload Your Image</label>
               <input type="file" id="user-image" name="image" value="<%= user ? user.image : '' %>" accept="image/*" >
           </div>
           <!-- Additional Details Input -->
           <div class="form-group">
               <label for="additional-details">Additional Qualification Details</label>
               <textarea id="additional-details" name="details" value="<%= user ? user.details : '' %>" rows="4" placeholder="Tell about Your Stream and Designation" required></textarea>
           </div>   
           </div>
         <!-- Industry Input -->
            <div class="form-group">
                <label for="mentee-industry">Industry</label>
                <select id="mentee-industry" name="industry" value="<%= user ? user.industry : '' %>" required>
                    <option value="" disabled selected>Select your industry</option>
                    <option value="technology">Technology</option>
                    <option value="finance">Finance</option>
                    <option value="healthcare">Healthcare</option>
                    <option value="education">Education</option>
                    <option value="marketing">Marketing</option>
                    <!-- Add more industries as needed -->
                </select>
            </div>
            <!-- Experience Level Input -->
            <div class="form-group">
                <label for="mentee-experience-level">Experience Level (Position)</label>
                <select id="mentee-experience-level" name="level" value="<%= user ? user.level : '' %>" required>
                    <option value="" disabled selected>Select your experience level</option>
                    <option value="student">Student Level</option>
                    <option value="entry">Entry Level</option>
                    <option value="mid">Mid Level</option>
                    <option value="senior">Senior Level</option>
                    <option value="executive">Executive Level</option>
                </select>
            </div>
            <!-- Language Input -->
            <div class="form-group">
                <label for="mentee-language">Language</label>
                <select id="mentee-language" name="language" value="<%= user ? user.language : '' %>" required>
                    <option value="" disabled selected>Select a language</option>
                    <option value="english">English</option>
                    <option value="spanish">Spanish</option>
                    <option value="french">French</option>
                    <option value="german">German</option>
                    <option value="mandarin">Mandarin</option>
                    <!-- Add more languages as needed -->
                </select>
            </div>
            <!-- Finish Registration Button -->
            <button type="submit" class="submit-button">Register as Mentee</button>
        </form>
    </div>
</section>
