<!-- Mentor Registration Page Start -->
<section class="mentor-registration-section">
    <div class="mentor-registration-container">
      
         <!-- Back Button -->
         <a href="/register" class="back-button"><i class="fas fa-arrow-left"></i> Back</a>
        <h2 class="mentor-registration-heading">Mentor Register</h2>
        <form class="mentor-registration-form" id="mentorRegistrationForm" action="/register/mntrreg" method="post">   
         <div class="registration-container">
         <!-- Name Input -->
           <div class="form-group">
            <label for="name">Enter Name</label>
            <input type="text" id="name" name="name" value="<%= user ? user.name : '' %>" placeholder="Enter your name" required>
        </div>
        <!-- Email Input -->
        <div class="form-group">
            <label for="email">Enter Email</label>
            <input type="email" id="email" name="email" value="<%= user ? user.email : '' %>" placeholder="Enter your email" required>
        </div>
        <!-- Password Input -->
        <div class="form-group">
            <label for="password">Create Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required>
        </div>
        <!-- User Image Input -->
        <div class="form-group">
            <label for="user-image">Upload Your Image</label>
            <input type="file" id="user-image" name="image" value="<%= user ? user.image : '' %>" accept="image/*" >
        </div>
        <!-- Additional Details Input -->
        <div class="form-group">
            <label for="additional-details">Additional Qualification Details</label>
            <textarea id="additional-details" name="details" value="<%= user ? user.details : '' %>" rows="4" placeholder="Tell about Your Stream and Designation" required></textarea>
        </div>
        </div>
            <!-- Industry Input -->
            <div class="form-group">
                <label for="industry">Industry</label>
                <select id="industry" name="industry" value="<%= user ? user.industry : '' %>" required>
                    <option value="" disabled selected>Select your industry</option>
                    <option value="technology">Technology</option>
                    <option value="finance">Finance</option>
                    <option value="healthcare">Healthcare</option>
                    <option value="education">Education</option>
                    <option value="marketing">Marketing</option>
                    <!-- Add more industries as needed -->
                </select>
            </div>
            <!-- Experience Level Input -->
            <div class="form-group">
                <label for="experience-level">Experience Level (Position)</label>
                <select id="experience-level" name="level" value="<%= user ? user.level : '' %>" required>
                    <option value="" disabled selected>Select your experience level</option>
                    <option value="student">Student Level</option>
                    <option value="entry">Entry Level</option>
                    <option value="mid">Mid Level</option>
                    <option value="senior">Senior Level</option>
                    <option value="executive">Executive Level</option>
                </select>
            </div>
            <!-- Language Input -->
            <div class="form-group">
                <label for="language">Language</label>
                <select id="language" name="language" value="<%= user ? user.language : '' %>" required>
                    <option value="" disabled selected>Select a language</option>
                    <option value="english">English</option>
                    <option value="spanish">Spanish</option>
                    <option value="french">French</option>
                    <option value="german">German</option>
                    <option value="mandarin">Mandarin</option>
                    <!-- Add more languages as needed -->
                </select>
            </div>
            <!-- Availability Schedule Input -->
            <div class="form-group availability-schedule">
                <label>Availability Schedule</label>
                <div class="schedule-grid">
                    <!-- Days of the week with time selection -->
                    <div class="day-schedule">
                        <label>Monday</label>
                        <input type="time" name="mondaystart" value="<%= user ? user.mondaystart : '' %>" required> to
                        <input type="time" name="mondayend" value="<%= user ? user.mondayend : '' %>" required>
                    </div>
                    <div class="day-schedule">
                        <label>Tuesday</label>
                        <input type="time" name="tuesdaystart" value="<%= user ? user.tuesdaystart : '' %>" required> to
                        <input type="time" name="tuesdayend" value="<%= user ? user.tuesdayend : '' %>" required>
                    </div>
                    <div class="day-schedule">
                        <label>Wednesday</label>
                        <input type="time" name="wednesdaystart" value="<%= user ? user.wednesdaystart : '' %>" required> to
                        <input type="time" name="wednesdayend" value="<%= user ? user.wednesdayend : '' %>" required>
                    </div>
                    <div class="day-schedule">
                        <label>Thursday</label>
                        <input type="time" name="thursdaystart" value="<%= user ? user.thursdaystart : '' %>" required> to
                        <input type="time" name="thursdayend" value="<%= user ? user.thursdayend : '' %>" required>
                    </div>
                    <div class="day-schedule">
                        <label>Friday</label>
                        <input type="time" name="fridaystart" value="<%= user ? user.fridaystart : '' %>" required> to
                        <input type="time" name="fridayend" value="<%= user ? user.fridayend : '' %>" required>
                    </div>
                    <div class="day-schedule">
                        <label>Saturday</label>
                        <input type="time" name="saturdaystart" value="<%= user ? user.saturdaystart : '' %>" required> to
                        <input type="time" name="saturdayend" value="<%= user ? user.saturdayend : '' %>" required>
                    </div>
                    <div class="day-schedule">
                        <label>Sunday</label>
                        <input type="time" name="sundaystart" value="<%= user ? user.sundaystart : '' %>" required> to
                        <input type="time" name="sundayend" value="<%= user ? user.sundayend : '' %>" required>
                    </div>
                </div>
            </div>
            <!-- Finish Registration Button -->
            <button type="submit" class="submit-button">Register as Mentor</button>
        </form>
    </div>
</section>
