      /* Mentor Registration Page Styles */
.mentor-registration-section {
   font-family: 'Arial', sans-serif;
   background-color: #f4f4f4;
   padding: 2rem 1rem;
   display: flex;
   justify-content: center;
   align-items: center;
   min-height: 100vh;
}

.mentor-registration-container {
   background-color: #ffffff;
   padding: 1rem;
   border-radius: 10px;
   box-shadow: 0 8px 16px rgba(0, 43, 91, 0.1);
   max-width: 600px;
   width: 100%;
   position: relative;
}

.mentor-registration-heading {
   font-size: 2rem;
   color: #002b5b;
   text-align: center;
   margin-bottom: 1.5rem;
}

.mentor-registration-form {
   display: flex;
   flex-direction: column;
}

.form-group {
   margin-bottom: 1.5rem;
}

.form-group label {
   display: block;
   font-weight: bold;
   margin-bottom: 0.5rem;
   color: #002b5b;
}

.form-group select,
.form-group input[type="time"] {
   width: 100%;
   padding: 0.75rem;
   border: 1px solid #ddd;
   border-radius: 5px;
   font-size: 1rem;
}

.availability-schedule {
   margin-top: 1.5rem;
}

.schedule-grid {
   display: grid;
   grid-template-columns: 1fr;
   gap: 1rem;
}

.day-schedule {
   display: flex;
   align-items: center;
   justify-content: space-between;
}

.day-schedule label {
   flex: 1;
   color: #002b5b;
}

.day-schedule input[type="time"] {
   width: 40%;
}

.submit-button {
   background-color: #ff6700;
   color: #ffffff;
   border: none;
   padding: 0.75rem 1.5rem;
   font-size: 1.2rem;
   cursor: pointer;
   border-radius: 5px;
   transition: background-color 0.3s ease, transform 0.3s ease;
   margin-top: 1rem;
}

.submit-button:hover {
   background-color: #002b5b;
   transform: scale(1.05);
}

@media (max-width: 768px) {
   .schedule-grid {
       grid-template-columns: 1fr;
   }
}
/* Back Button */
