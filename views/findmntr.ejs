                    <option value="friday">Friday</option>
                    <option value="saturday">Saturday</option>
                    <option value="sunday">Sunday</option>
                </select>
            </div> -->

            <!-- Find Mentor Button -->
            <button type="submit" class="find-mentor-button" onclick="findMentor()">Find Mentor</button>
        </form>
        </div>
    </div>
</section>
<!-- Find Mentor Page End -->

