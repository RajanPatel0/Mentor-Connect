<body>

<!-- Mentor Profile Page Start -->
<section class="mentor-profile-section">
    <!-- Back Button -->
    <a href="/findmntr" class="back-button"><i class="fas fa-arrow-left"></i> Back to Find Mentor</a>
    
    <!-- Profile Cards Container -->
    <div class="profile-cards-container">
        <!-- Scroll Buttons -->
        <button class="scroll-button left-scroll" onclick="scrollLeft()"><i class="fas fa-chevron-left"></i></button>

        <!-- Cards Wrapper -->
        <div class="mentor-cards-wrapper">
            <h2 style="text-align: center;">Available Mentors</h2>
            <% if (mentors && mentors.length > 0) { %>
                <% mentors.forEach(mentor => { %>
            <!-- Mentor Profile Card -->
            <div class="mentor-profile-card">
                
                <!-- Profile Image -->
                <div class="mentor-image">
                    <!-- <img src="path/to/mentor-image.jpg" alt="Mentor Image"> -->
                    <img src="<%= mentor.image %>" alt="<%= mentor.name %>'s picture" class="mentor-image">
                </div>
                <!-- Profile Information -->
                <div class="mentor-info">
                    <h2 class="mentor-name">Mentor Name: <%= mentor.name %></h2>
                    <p class="mentor-designation">Designation: <%= mentor.details %></p>
                    <p class="mentor-industry">Industry:  <%= mentor.industry %></p>
                    <p class="mentor-experience">Experience Level:  <%= mentor.level %></p>
                    <p class="mentor-language">Language:  <%= mentor.language %></p>

                    <!-- Schedule -->
                    <div class="mentor-schedule">
                        <h3>Schedule:</h3>
                        <ul>
                            <% Object.entries(mentor.schedule).forEach(([day, time]) => { %>
                            <li>
                                <strong><%= day.charAt(0).toUpperCase() + day.slice(1) %>:</strong>
                                <% if (time && time.start && time.end) { %>
                                    <%= time.start %> - <%= time.end %>
                                <% } else { %>
                                    Not Available
                                <% } %>
                            </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
                <!-- Fix Meeting Button -->
                <form action="/schedule-meeting" method="post">
                    <input type="hidden" name="mentorId" value="<%= mentor._id %>">
                    <button class="fix-meeting-button" onclick="fixMeeting()">Fix Meeting</button>
                </form>
            </div>
            <% }); %>
                <% } else { %>
                <p>No mentors found matching your criteria.</p>
                <% } %>

    
        </div>
      
      <button class="scroll-button right-scroll" onclick="scrollRight()"><i class="fas fa-chevron-right"></i></button>
   </div>
</section>
<!-- Mentor Profile Page End -->

<script>
   // Function to scroll left
function scrollLeft() {
    const cardsWrapper = document.querySelector('.mentor-cards-wrapper');
    cardsWrapper.scrollBy({
        left: -300,
        behavior: 'smooth'
    });
}

// Function to scroll right
function scrollRight() {
    const cardsWrapper = document.querySelector('.mentor-cards-wrapper');
    cardsWrapper.scrollBy({
        left: 300,
        behavior: 'smooth'
    });
}

// Function to handle 'Fix Meeting' button click
function fixMeeting() {
    alert('Redirecting to fix meeting page...');
    // You can add logic here to open a scheduling page or modal
}


</script>
</body>
